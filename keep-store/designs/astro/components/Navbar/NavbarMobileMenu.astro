---
import type { NavigationConfig } from './navbar.configs';

interface Props {
  config: NavigationConfig;
}

const { config } = Astro.props as Props;
---

<div class="md:hidden">
  <button
    type="button"
    class="inline-flex items-center justify-center p-2 rounded-md text-text-secondary hover:text-text-primary focus:outline-none"
    aria-controls="mobile-menu"
    aria-expanded="false"
    data-nav-toggle
  >
    <span class="sr-only">Open main menu</span>
    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </button>
</div>

<div class="md:hidden hidden" id="mobile-menu" data-nav-menu>
  <div class="px-4 pt-4 pb-6 space-y-2 bg-background-card">
    {config.links.map((link) => (
      <a href={link.href} class="block text-text-secondary hover:text-text-primary px-3 py-2 rounded-md text-base font-medium">
        {link.label}
      </a>
    ))}
    {config.actions?.secondary && (
      <a href={config.actions.secondary.href} class="block text-text-secondary hover:text-text-primary px-3 py-2 rounded-md text-base font-medium">
        {config.actions.secondary.label}
      </a>
    )}
    {config.actions?.primary && (
      <a href={config.actions.primary.href} class="block bg-gradient-purple text-white px-3 py-2 rounded-md text-base font-semibold">
        {config.actions.primary.label}
      </a>
    )}
  </div>
</div>
