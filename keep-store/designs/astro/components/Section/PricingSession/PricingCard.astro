---
import Badge from '@components/atoms/Badge';
import Button from '@components/atoms/Button';

export interface Props {
  name: string;
  description: string;
  price: number;
  period: string;
  note?: string;
  badge?: string;
  featured?: boolean;
  features: string[];
  ctaText: string;
  ctaVariant?: 'primary' | 'secondary';
}

const {
  name,
  description,
  price,
  period,
  note,
  badge,
  featured = false,
  features,
  ctaText,
  ctaVariant = 'primary'
} = Astro.props;
---

<div class:list={['pricing-card', { featured }]}>
  {badge && (
    <Badge variant="pricing">{badge}</Badge>
  )}
  <div class="pricing-name">{name}</div>
  <div class="pricing-description">{description}</div>
  <div class="pricing-price">
    <span class="price-amount">${price}</span>
    <span class="price-period">{period}</span>
  </div>
  {note && <div class="price-note">{note}</div>}
  <ul class="pricing-features">
    {features.map(feature => (
      <li>
        <span class="check-icon">âœ“</span>
        <span set:html={feature} />
      </li>
    ))}
  </ul>
  <Button variant={ctaVariant} class="pricing-cta">
    {ctaText}
  </Button>
</div>

<style>
  .pricing-card {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 48px;
    width: 100%;
    max-width: 400px;
    transition: all 0.3s;
    display: flex;
    flex-direction: column;
  }

  .pricing-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(217, 70, 239, 0.3);
  }

  .pricing-card.featured {
    border-color: #d946ef;
    background: linear-gradient(135deg, rgba(217, 70, 239, 0.1) 0%, #16213e 100%);
    transform: scale(1.05);
  }

  .pricing-name {
    font-size: 28px;
    font-weight: 800;
    margin-bottom: 12px;
    margin-top: 24px;
    color: #e0e0e0;
  }

  .pricing-description {
    font-size: 15px;
    color: #888;
    margin-bottom: 32px;
    line-height: 1.6;
  }

  .pricing-price {
    margin-bottom: 8px;
  }

  .price-amount {
    font-size: 56px;
    font-weight: 800;
    background: linear-gradient(135deg, #d946ef 0%, #a855f7 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .price-period {
    font-size: 18px;
    color: #666;
  }

  .price-note {
    font-size: 13px;
    color: #666;
    margin-bottom: 32px;
  }

  .pricing-features {
    list-style: none;
    margin-bottom: 40px;
    flex: 1;
  }

  .pricing-features li {
    padding: 12px 0;
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 15px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    color: #e0e0e0;
  }

  .pricing-features li:last-child {
    border-bottom: none;
  }

  .check-icon {
    color: #10b981;
    font-size: 20px;
  }

  .pricing-cta {
    width: 100%;
  }
</style>
