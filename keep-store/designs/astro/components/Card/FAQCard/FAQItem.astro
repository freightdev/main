---
export interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;
---

<div class="faq-item">
  <h3 class="faq-question">{question}</h3>
  <p class="faq-answer">{answer}</p>
</div>

<style>
  .faq-item {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 32px;
    transition: all 0.3s;
  }

  .faq-item:hover {
    border-color: #d946ef;
  }

  .faq-question {
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 16px;
    color: #d946ef;
  }

  .faq-answer {
    font-size: 16px;
    color: #888;
    line-height: 1.8;
  }
</style>
