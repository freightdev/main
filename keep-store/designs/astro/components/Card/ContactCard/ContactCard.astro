---
import type { ContactMethod } from '../content/contact';
import type { CardRendererProps } from '../card.types';

const { item } = Astro.props as CardRendererProps<ContactMethod>;
---

<div class="space-y-3 text-center">
  <div class="text-5xl">{item.icon}</div>
  <h3 class="text-2xl font-bold">{item.title}</h3>
  <p class="text-text-secondary">{item.description}</p>
  <p class="text-purple-primary font-semibold text-lg">{item.contact}</p>
  {item.availability && <p class="text-sm text-text-tertiary">{item.availability}</p>}
</div>
