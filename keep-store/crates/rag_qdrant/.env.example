# Qdrant RAG Environment Variables

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
# QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_USE_TLS=false
QDRANT_COLLECTION_NAME=codebase

# Embedding Provider Configuration
EMBEDDING_PROVIDER=ollama
EMBEDDING_MODEL=voyage-2
EMBEDDING_API_KEY=your_embedding_api_key_here
# EMBEDDING_API_URL=https://api.anthropic.com/v1/embeddings

# For OpenAI
# EMBEDDING_PROVIDER=openai
# EMBEDDING_MODEL=text-embedding-3-small
# EMBEDDING_API_KEY=sk-your-openai-key-here

# For Ollama
# EMBEDDING_PROVIDER=ollama
# EMBEDDING_MODEL=nomic-embed-text
# EMBEDDING_API_URL=http://localhost:11434

# Indexing Configuration
INDEXING_ROOT_PATH=../../
INDEXING_MAX_FILE_SIZE_MB=10
INDEXING_PARALLEL_WORKERS=4

# Chunking Configuration
CHUNKING_STRATEGY=semantic
CHUNKING_SIZE=512
CHUNKING_OVERLAP=50

# Search Configuration
SEARCH_TOP_K=10
SEARCH_SCORE_THRESHOLD=0.7

# Performance
MAX_CONCURRENT_REQUESTS=10
CACHE_EMBEDDINGS=true

# Logging
RUST_LOG=info
LOG_FORMAT=json
