# MCP Server Environment Variables

# Server Configuration
MCP_SERVER_NAME=my-agent
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=3000
MCP_SERVER_DESCRIPTION=My MCP Agent

# Security
MCP_AUTH_ENABLED=true
MCP_AUTH_TOKEN=your_secret_token_here_change_me
MCP_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
MCP_USE_TLS=false

# Agent Authentication Tokens (Optional, for calling other agents)
CO_DRIVER_TOKEN=co_driver_token_here
MARKETEER_TOKEN=marketeer_token_here
BIG_BEAR_TOKEN=big_bear_token_here

# Service Discovery (Optional)
MCP_DISCOVERY_ENABLED=false
MCP_DISCOVERY_TYPE=etcd
MCP_ETCD_ENDPOINTS=http://localhost:2379

# DragonflyDB Integration (Optional)
DRAGONFLY_ENABLED=false
DRAGONFLY_HOST=localhost
DRAGONFLY_PORT=6379
DRAGONFLY_CHANNEL_PREFIX=mcp:

# Marketeer Integration (Optional)
MARKETEER_ENABLED=false
MARKETEER_URL=http://localhost:8000
MARKETEER_API_KEY=your_marketeer_api_key_here

# Firecracker Integration (Optional)
FIRECRACKER_ENABLED=false
FIRECRACKER_SOCKET_PATH=/var/run/firecracker.sock
FIRECRACKER_VM_ID_PREFIX=mcp-agent

# Performance
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT_SECONDS=30
RATE_LIMIT_PER_SECOND=100
CONNECTION_POOL_SIZE=100

# Logging
RUST_LOG=info
LOG_FORMAT=json
