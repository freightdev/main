---
import type { FeatureItem } from '../content/features';

interface Props {
  feature: FeatureItem;
}

const { feature } = Astro.props as Props;
---

<div class="bg-background-elevated p-6 rounded-xl border border-background-card hover:border-purple-primary/50 transition-colors">
  <h3 class="text-xl font-semibold mb-2">{feature.name}</h3>
  <p class="text-text-secondary">{feature.description}</p>
</div>
