# AI Assistant Environment Configuration
# Copy this file to .env and customize for your setup

# =============================================================================
# REQUIRED SETTINGS - CHANGE THESE
# =============================================================================

# Database password - CHANGE THIS
POSTGRES_PASSWORD="change_this_secure_password"

# Secret key for sessions - CHANGE THIS  
SECRET_KEY="change_this_super_secret_key_in_production"

# Your preferred model (place in models/ directory)
DEFAULT_MODEL="Llama-3.1-8B-Instruct-Q5_K_M.gguf"

# GitHub token (optional, for private repos)
GITHUB_TOKEN=""

# =============================================================================
# COMMON CUSTOMIZATIONS
# =============================================================================

# App settings
DEBUG=true
PORT=8000

# Model settings
MAX_CONTEXT_LENGTH=4096
DEFAULT_TEMPERATURE=0.7

# File paths (relative to project root)
MODELS_DIR="../models"
WORKSPACE_DIR="../workspace"

# =============================================================================
# QUICK SETUP PROFILES
# =============================================================================

# Uncomment one of these profiles for quick setup:

# PROFILE: Development (default)
# DEBUG=true
# LOG_LEVEL="DEBUG"
# ENABLE_HOT_RELOAD=true

# PROFILE: Production
# DEBUG=false
# LOG_LEVEL="WARNING"
# REQUIRE_AUTHENTICATION=true
# ENABLE_HOT_RELOAD=false

# PROFILE: Low Memory (8GB RAM)
# DEFAULT_MODEL="Llama-3.1-7B-Instruct-Q4_K_M.gguf"
# MAX_CONTEXT_LENGTH=2048
# MAX_WORKERS=2

# PROFILE: High Performance (32GB+ RAM)
# DEFAULT_MODEL="CodeLlama-13B-Instruct-Q5_K_M.gguf"
# MAX_CONTEXT_LENGTH=8192
# MAX_WORKERS=8